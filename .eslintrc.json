{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "indent": ["error", 4],
      "no-trailing-spaces": "error",
      "@typescript-eslint/no-explicit-any": "off"
    },
    "overrides": [
        {
            "files": ["**/*.ts"],
            "excludedFiles": "dist/**"
        }
    ]
  }
  